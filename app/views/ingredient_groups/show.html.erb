<p id="notice"><%= notice %></p>

<p>
  <strong><%= @ingredient_group.name %></strong>
</p>



<ul class="ingre">
  <% @ingredients.each do |ingredient| %>

  <li>
    <div id="ingredients">
      <%= link_to image_tag("Ingredient/"+@ingredient_group.name+"/"+ingredient.name+".jpg", :alt => "Ingredient"),ingredient %>
