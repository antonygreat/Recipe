<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Title</th>
      <th>Isban</th>
      <!--<th>Imageid</th>-->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.userid %></td>
        <td><%= recipe.title %></td>
        <td><%= recipe.isban %></td>
       <!--<td><%= recipe.imageid %></td>-->
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

