<!DOCTYPE html>
<html>
  <head>
    <title>Niceweather</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" type="text/css" href="content.css" />
  </head>
  <body>
    
    <div id="header">

      <div id="logo">
	<p>Logo</p>
      </div>

      <div id="nav">
	<ul class="person">
	  <% if signed_in? %>
	  <li><%= link_to "Make New Recipe",new_recipe_path %></li>
	  <li><%= link_to "My Recipes",recipes_path %></li>
	  <li><%= link_to "My Favorites",favorites_path %></li>
	  <li><%= link_to "Setting", edit_user_path(current_user)%></li>
	  <li><%= link_to "Log Out", signout_path, method: "delete" %></li>
	  <% else %>
	  <li> <%= link_to "Log In", signin_path %></li>
	  <li> <%= link_to "Register", register_path%></li>
	  <% end %>
	</ul>
      </div>

	<ul class="menu">
	  <li><%= link_to "Home",controller: "home" %></li>
	  <li><%= link_to "Search By Ingredients",controller: "ingredient_groups" %></li>
	  <li><%= link_to "Search By Types",controller: "types" %></li>
	  
	</ul>

    </div>

    <div id="content">
      <%= yield %>
    </div>

    <div id="footer">
      aaaaaaaaaaaaa
    </div>
</div>


<% flash.each do |key,value|%>
<p><%= value %></p><% end %>
</body>
</html>
